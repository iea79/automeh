extends template.jade

block variables
	-var pageClass = "";
	-var headerContrast = true;

block title
	title Home

block content
	// begin topSlider 
	.topSlider__wrap
		.topSlider
			- var slide = 4;
			-for (var i = 0; i < slide; i++) {
				.topSlider__item(style="background-image: url('img/f-slide.jpg')")
					.topSlider__content
						.topSlider__title Накидки на сиденья авто из натурального меха
						.topSlider__sub Закажите набор из 2-х или 4-х накидок по специальной цене и получайте еще больше удовольствия от езды в холодное время года.
						.topSlider__action
							button.btn.btn_contrast Смотреть каталог	
			-};
		.topSlider_thumbs
			-for (var i = 0; i < slide; i++) {
				.topSlider__item
					img(src="img/f-slide-sm"+i+".jpg", alt="")
			-};
	// end topSlider 

